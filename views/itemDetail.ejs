<% include common-tags.ejs %>
    <title>搜寻详情 - 塔罗Ju</title>
    <style>
        .thumbnail{
            width: 170px;
            margin: 20px 10px 0 0;
            float: left;
        }
        @media only screen and (min-width: 360px) {
            .thumbnail{
                width: 200px;
            }
        }
        @media only screen and (min-width: 428px) {
            .thumbnail{
                width: 220px;
            }
        }
        @media only screen and (min-width: 700px) {
            .thumbnail{
                width: 250px;
            }
        }
        .text-block{
            padding:1px;
        }
    </style>
</head>
<body>
    <div class="wrapper">

        <% include common-header.ejs %>
        <% include IENotice.ejs %>

        <div class="container main-content">
            <% if(code == 1){ %>
                <% include common-no-data.ejs %>
            <% }else if(code == 0){ %>
                <% if(sCategoryFlag == "card"){ %>
                    <img src=<%= cardSrc %> alt=<%= cardSrc %> class="thumbnail" id="thumbnail"/>
                    <div class="text-block">
                        <h3><%= cardNum%>.<%= cardName%></h3>
                        <p><%= cardSummary%></p>

                        <h4>大体上的意思</h4>
                        <p><%= cardRightPosCommon%></p>

                        <h4>两性关系上的意义</h4>
                        <p><%= cardRightPosSex%></p>

                        <h4>倒立的<%= cardName%></h4>
                        <p><%= cardReversePos%></p>
                    </div>
                <% }else if(sCategoryFlag == "px"){ %>
                    <img src=<%= pxBanner %> alt=<%= pxBanner %> class="thumbnail" id="thumbnail"/>
                    <div class="text-block">
                        <h3><%= pxName%></h3>
                        <p><%= pxExpertIn%></p>

                        <h4>牌形简介</h4>
                        <p><%= pxSummary%></p>

                        <% if(pxDetail){%>
                            <h4>详细含义</h4>
                            <p><%= pxDetail%></p>
                        <% } %>

                        <h4>每张位置解释</h4>
                        <ul class="list-unstyled">
                            <% for(var i = 0, len = splitString("#",pxPositionMeaning).length; i < len; i++){ %>
                                <li>
                                    <label><%= i+1 %></label>
                                    <span><%= splitString("#",pxPositionMeaning)[i] %></span>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                <% } %>
            <% } %>
        </div>
        <% include common-footer.ejs%>
    </div>
    <script src="js/jquery-1.11.2-min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/common.js"></script>
</body>
</html>